<Window
    x:Class="AppDB.View.InvoiceWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AppDB.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Записи"
    MinWidth="400"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d">
    <Window.Resources>
        <Style BasedOn="{StaticResource MaterialDesignFilledDatePicker}" TargetType="DatePicker">
            <Setter Property="Padding" Value="8" />
            <Setter Property="Margin" Value="8" />
        </Style>
        <Style BasedOn="{StaticResource MaterialDesignFilledTextBox}" TargetType="TextBox">
            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="Margin" Value="8" />
        </Style>
        <Style BasedOn="{StaticResource MaterialDesignFilledComboBox}" TargetType="ComboBox">
            <Setter Property="materialDesign:ComboBoxAssist.MaxLength" Value="2" />
            <Setter Property="materialDesign:HintAssist.Hint" Value="2" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="Margin" Value="8" />
            <Setter Property="materialDesign:HintAssist.HintOpacity" Value=".26" />
            <Setter Property="IsEditable" Value="True" />
        </Style>
        <Style BasedOn="{StaticResource MaterialDesignOutlinedButton}" TargetType="Button">
            <Setter Property="Margin" Value="8" />
            <Setter Property="Padding" Value="3" />
        </Style>
    </Window.Resources>

    <materialDesign:ColorZone>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBox
                x:Name="TextBoxID"
                Grid.Row="0"
                Grid.Column="0"
                materialDesign:HintAssist.Hint="Id"
                Text="{Binding Id}"
                Visibility="Collapsed" />
            <DatePicker
                x:Name="DepartureDateInput"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                materialDesign:HintAssist.Hint="Дата отбытия"
                Text="{Binding DepartureDate, ConverterCulture=ru-Ru}" />
            <DatePicker
                x:Name="ArrivalDateInput"
                Grid.Row="2"
                Grid.ColumnSpan="2"
                materialDesign:HintAssist.Hint="Дата прибытия"
                Text="{Binding ArrivalDate, ConverterCulture=ru-Ru}" />

            <ComboBox
                x:Name="ComboBoxProduct"
                Grid.Row="3"
                Grid.Column="0"
                materialDesign:HintAssist.Hint="Товар"
                DisplayMemberPath="Name"
                ItemsSource="{Binding Product}"
                SelectedItem="{Binding Product}" />
            <Button
                x:Name="CreateNewProductButton"
                Grid.Row="3"
                Grid.Column="1"
                Click="CreateNewProductButton_Click"
                Content="{materialDesign:PackIcon Kind=Add}"
                ToolTip="Создать новый товар" />
            <ComboBox
                x:Name="ComboBoxPurveyor"
                Grid.Row="4"
                Grid.Column="0"
                materialDesign:HintAssist.Hint="Поставщик"
                DisplayMemberPath="Name"
                ItemsSource="{Binding Supplier}" />
            <Button
                x:Name="CreateNewSupplierButton"
                Grid.Row="4"
                Grid.Column="1"
                Click="CreateNewSupplierButton_Click"
                Content="{materialDesign:PackIcon Kind=Add}"
                ToolTip="Создать нового поставщика" />

            <ComboBox
                x:Name="ComboBoxForwarder"
                Grid.Row="5"
                Grid.Column="0"
                materialDesign:HintAssist.Hint="Экспедитор"
                DisplayMemberPath="Name"
                ItemsSource="{Binding Forwarder}" />
            <Button
                x:Name="CreateNewForwarderButton"
                Grid.Row="5"
                Grid.Column="1"
                Click="CreateNewForwarderButton_Click"
                Content="{materialDesign:PackIcon Kind=Add}"
                ToolTip="Создать новый экспедитора" />
            <TextBox
                x:Name="TextBoxCost"
                Grid.Row="6"
                Grid.ColumnSpan="2"
                materialDesign:HintAssist.Hint="Стоимость"
                Text="{Binding Cost}" />
            <Button
                x:Name="SaveButton"
                Grid.Row="7"
                Grid.ColumnSpan="2"
                Width="200"
                Margin="10"
                Click="SaveButton_Click"
                Content="Добавить"
                Style="{StaticResource MaterialDesignFlatAccentBgButton}" />
        </Grid>
    </materialDesign:ColorZone>

</Window>
